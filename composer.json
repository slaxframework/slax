{
  "name": "slaxframework/slax",
  "description": "Slax PHP Framework",
  "keywords": ["framework", "slax"],
  "license": "MIT",
  "authors": [
    {
      "name": "Eray AYDIN",
      "email": "erayaydin2016@gmail.com",
      "homepage":"http://www.erayaydin.me",
      "role": "developer"
    }
  ],
  "require": {
    "php": ">= 5.3.0",
    "slim/slim": "2.4.*",
    "slim/views":"0.1.2",
    "twig/twig": "1.*",
    "twig/extensions": "*",
    "itsgoingd/slim-facades": "dev-master",
    "illuminate/database" : "4.*",
    "cartalyst/sentry" : "2.*",
    "ircmaxell/password-compat": "1.0.*"
  },
  "autoload": {
    "psr-4": {
      "" : [
        "app/controllers/",
        "app/models/",
        "app/middlewares/",
        "app/modules/"
      ],
      "SlaxFramework\\Framework\\" : [
        "src/slaxframework/framework/"
      ],
      "SlaxFramework\\Menu\\" : [
        "src/slaxframework/menu/"
      ],
      "SlaxFramework\\Module\\" : [
        "src/slaxframework/module/"
      ],
      "SlaxFramework\\TwigExtension\\" : [
        "src/slaxframework/twig-extension"
      ]
    }
  },
  "scripts": {
    "post-install-cmd": [
      "chmod -R 777 app/storage",
      "php migrate.php"
    ],
    "post-update-cmd": [
      "rm -rf app/storage/cache/*"
    ],
    "post-create-project-cmd": [
      "chmod -R 777 app/storage",
      "php migrate.php"
    ]
  },
  "config": {
    "preferred-install": "dist"
  },
  "minimum-stability": "dev"
}